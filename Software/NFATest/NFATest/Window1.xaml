<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="NFATest.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="NFATest"
	Height="300"
	Width="300">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<StackPanel
			Grid.Column="0">
			<TextBox
				x:Name="fileTextBox"></TextBox>
			<Button
				x:Name="readFileTextBox"
				Click="readFileTextBox_Click">Read NFA File</Button>
			<Button
				x:Name="nfaCalibrateButton"
				Click="nfaCalibrateButton_Click">Calibrate NFA</Button>
		</StackPanel>
		<StackPanel
			Grid.Column="1">
			<TextBox
				x:Name="outputTextBox"></TextBox>
		</StackPanel>
	</Grid>
</Window>