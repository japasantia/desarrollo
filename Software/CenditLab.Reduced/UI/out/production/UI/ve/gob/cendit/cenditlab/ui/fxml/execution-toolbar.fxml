<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<?import ve.gob.cendit.cenditlab.ui.ImageButton?>
<?import javafx.scene.image.Image?>
<?import ve.gob.cendit.cenditlab.ui.IconView?>

<?import javafx.scene.image.ImageView?>

<fx:root type="GridPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
<!-- <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"> -->

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="32.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="32.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="32.0" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="32.0" fillWidth="true"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="32.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="32.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="32.0" valignment="CENTER" vgrow="SOMETIMES" />
    </rowConstraints>

   <children>

       <Button fx:id="startButton" GridPane.columnIndex="0" GridPane.rowIndex="0" >
           <graphic>
               <ImageView fitWidth="16.0" fitHeight="16.0">
                   <image>
                       <Image url="@../images/play-icon.png"/>
                   </image>
               </ImageView>
           </graphic>
           <GridPane.margin>
               <Insets topRightBottomLeft="2"/>
           </GridPane.margin>
       </Button>

       <Button fx:id="startButton" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="16.0" prefHeight="16.0">
           <graphic>
               <ImageView fitWidth="16.0" fitHeight="16.0">
                   <image>
                       <Image url="@../images/stop-icon.png"/>
                   </image>
               </ImageView>
           </graphic>
           <GridPane.margin>
               <Insets topRightBottomLeft="2"/>
           </GridPane.margin>
       </Button>

       <ProgressIndicator fx:id="progressIndicator" progress="-1" GridPane.columnIndex="5" maxWidth="24" maxHeight="24">
           <GridPane.margin>
               <Insets topRightBottomLeft="2"/>
           </GridPane.margin>
       </ProgressIndicator>

   </children>
<!-- </GridPane> -->
</fx:root>