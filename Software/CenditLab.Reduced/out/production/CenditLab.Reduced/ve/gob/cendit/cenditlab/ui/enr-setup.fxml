<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ve.gob.cendit.cenditlab.ui.FieldInput?>

<?import ve.gob.cendit.cenditlab.ui.EnrTablePane?>
<fx:root type="TitledPane" animated="false" text="Configuración ENR" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
<!-- <TitledPane animated="false" text="Configuración ENR" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"> -->
  <content>
    <GridPane hgap="2.0" vgap="2.0">
      <children>
        <!-- Pane Title -->
        <Label text="Modo ENR" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="LEFT" GridPane.rowIndex="0" />
        <!-- Table mode radio buttons-->
        <RadioButton fx:id="enrTableModeRadioButton" mnemonicParsing="false" selected="true" text="Tabla" GridPane.rowIndex="1">
               <toggleGroup>
                  <ToggleGroup fx:id="enrModeToggleGroup" />
               </toggleGroup></RadioButton>
        <RadioButton fx:id="enrSpotModeRadioButton" mnemonicParsing="false" text="Spot" toggleGroup="$enrModeToggleGroup" GridPane.rowIndex="2" />
        <!-- Common table checkbox -->
        <CheckBox fx:id="enrCommonTableCheckBox" maxWidth="1.7976931348623157E308" mnemonicParsing="false" selected="true" text="Tabla común" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <!-- Enr spot field input -->
        <FieldInput fx:id="enrSpotFieldInput" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <!-- Enr tables entry pane -->
        <Accordion fx:id="enrTablesAccordion" GridPane.columnSpan="2" GridPane.rowIndex="3">
           <panes>
             <EnrTablePane fx:id="enrCommonTablePane" text="Tabla ENR"/>
             <EnrTablePane fx:id="enrExtraTablePane" disable="true" visible="false" text="Tabla ENR medicion"/>
           </panes>
        </Accordion>
      </children>
      <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
      </rowConstraints>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding>
    </GridPane>
  </content>
<!-- </TitledPane> -->
</fx:root>
